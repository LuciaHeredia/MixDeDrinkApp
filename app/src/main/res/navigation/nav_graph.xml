<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mixdedrink.SearchFragment"
        android:label="@string/search_fragment_label"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_SearchFragment_to_RecipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.example.mixdedrink.RecipeFragment"
        android:label="@string/recipe_fragment_label"
        tools:layout="@layout/fragment_recipe">

        <action
            android:id="@+id/action_RecipeFragment_to_SearchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.mixdedrink.FavoritesFragment"
        android:label="@string/favorites_fragment_label"
        tools:layout="@layout/fragment_favorites">
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.mixdedrink.AboutFragment"
        android:label="@string/about_fragment_label"
        tools:layout="@layout/fragment_about">
    </fragment>

</navigation>